<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".QuessActivity"
    android:background="@drawable/background"
    android:padding="10dp"
    tools:showIn="@layout/app_bar_quess">

    <TextView
        android:id="@+id/score_tv_ID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Score: 0"
        android:textSize="20sp"
        android:textColor="#000"
        android:layout_marginTop="20dp"
        />
    <TextView
        android:id="@+id/quesNo_tv_ID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Question : 1/x"
        android:layout_below="@id/score_tv_ID"
        android:textSize="20sp"
        android:textColor="#000"
        />
    <TextView
        android:id="@+id/clock_tv_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:text="00:20"
        android:textColor="#000"
        android:textSize="40sp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/ques_tv_ID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Who is the creator of the whole universe?"
        android:layout_below="@id/quesNo_tv_ID"
        android:layout_marginTop="80dp"
        android:textAlignment="center"
        android:textColor="#000"
        android:textSize="15sp"
        android:padding="8dp"
        android:background="@drawable/textview_deign"
        />
    <RadioGroup
        android:id="@+id/radio_group_ID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ques_tv_ID"
        android:layout_marginTop="25dp">

        <RadioButton
            android:id="@+id/radio_option1_ID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Option 1"/>

        <RadioButton
            android:id="@+id/radio_option2_ID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Option 2"/>

        <RadioButton
            android:id="@+id/radio_option3_ID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Option 3"/>

        <RadioButton
            android:id="@+id/radio_option4_ID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Option 3"/>

    </RadioGroup>

    <Button
        android:id="@+id/newt_Btn_ID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Next"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/button_design"
        android:textColor="#FFFFFF"
        android:textAllCaps="false"
        android:textSize="15sp"
        android:layout_below="@id/radio_group_ID"
        android:layout_marginTop="20dp"
        android:onClick="onNextClicked"/>

</RelativeLayout>